<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_main" tools:context="android.jrichardsz.org.myapplication.MainActivity">

    <ImageView
        android:layout_margin="20dp"
        android:src="@drawable/logo_glup"
        android:layout_width="wrap_content"
        android:layout_height="120dp" />
    <Button
        android:id="@+id/sinSuavizado"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:text="Short sin suavizado"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/conSuavizado"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:text="Short con suavizado"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/con3ds"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:text="Short con 3ds"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
